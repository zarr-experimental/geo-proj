{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Template Convention Metadata",
  "description": "Schema for Template Zarr convention metadata with fixed UUID and exact values",
  "type": "object",
  "properties": {
    "f17cb550-5864-4468-aeb7-f3180cfb622f": {
      "type": "object",
      "description": "geo:proj metadata object",
      "properties": {
        "version": {
          "type": "string",
          "const": "0.1.0",
          "description": "Semantic version number of the convention"
        },
        "schema": {
          "type": "string",
          "const": "https://raw.githubusercontent.com/zarr-experimental/geo-proj/refs/tags/v0.1.0/schema.json",
          "description": "URL to the JSON Schema definition for this convention"
        },
        "name": {
          "type": "string",
          "const": "geo:proj",
          "description": "Human-readable name of the convention"
        },
        "description": {
          "type": "string",
          "const": "Template convention for demonstrating Zarr convention metadata structure",
          "description": "Brief description of the convention's purpose and usage"
        },
        "spec": {
          "type": "string",
          "const": "https://github.com/zarr-experimental/geo-proj/blob/v0.1.0/README.md",
          "description": "URL to the full specification document"
        },
        "configuration": {
          "type": "object",
          "description": "Convention-specific configuration parameters",
          "properties": {
            "code": {
              "type": ["string", "null"],
              "description": "Authority:code identifier (e.g., EPSG:4326)",
              "pattern": "^[A-Z]+:[0-9]+$"
            },
            "wkt2": {
              "type": ["string", "null"],
              "description": "WKT2 (ISO 19162) CRS representation"
            },
            "projjson": {
              "oneOf": [
                {
                  "$ref": "https://proj.org/schemas/v0.7/projjson.schema.json"
                },
                {
                  "type": "null"
                }
              ],
              "description": "PROJJSON CRS representation"
            },
            "bbox": {
              "type": ["array", "null"],
              "oneOf": [
                {
                  "minItems": 4,
                  "maxItems": 4
                },
                {
                  "minItems": 6,
                  "maxItems": 6
                }
              ],
              "items": {
                "type": "number"
              },
              "description": "Bounding box in CRS coordinates"
            },
            "transform": {
              "type": ["array", "null"],
              "oneOf": [
                {
                  "minItems": 6,
                  "maxItems": 6
                },
                {
                  "minItems": 9,
                  "maxItems": 9
                }
              ],
              "items": {
                "type": "number"
              },
              "description": "Affine transformation coefficients"
            },
            "spatial_dimensions": {
              "type": ["array"],
              "minItems": 2,
              "maxItems": 2,
              "items": {
                "type": "string"
              },
              "description": "Names of spatial dimensions [y_name, x_name]"
            }
          },
          "oneOf": [
            {
              "required": ["code"]
            },
            {
              "required": ["wkt2"]
            },
            {
              "required": ["projjson"]
            }
          ],
          "required": ["spatial_dimensions"],
          "additionalProperties": false
        }
      },
      "required": ["version", "schema", "name", "description", "spec", "configuration"],
      "additionalProperties": false
    }
  },
  "required": ["f17cb550-5864-4468-aeb7-f3180cfb622f"],
  "additionalProperties": true
}