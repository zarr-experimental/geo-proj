{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Template Convention Metadata",
  "description": "Schema for Template Zarr convention metadata with fixed UUID and exact values",
  "type": "object",
  "properties": {
    "f010a634-3525-416e-9320-8f44b5bc352c": {
      "type": "object",
      "description": "Template convention metadata",
      "properties": {
        "version": {
          "type": "string",
          "const": "0.1.0",
          "description": "Semantic version number of the convention"
        },
        "schema": {
          "type": "string",
          "const": "https://raw.githubusercontent.com/zarr-conventions/template/refs/tags/v0.1.0/schema.json",
          "description": "URL to the JSON Schema definition for this convention"
        },
        "name": {
          "type": "string",
          "const": "Template",
          "description": "Human-readable name of the convention"
        },
        "description": {
          "type": "string",
          "const": "Template convention for demonstrating Zarr convention metadata structure",
          "description": "Brief description of the convention's purpose and usage"
        },
        "spec": {
          "type": "string",
          "const": "https://github.com/zarr-conventions/template/blob/v0.1.0/README.md",
          "description": "URL to the full specification document"
        },
        "configuration": {
          "type": "object",
          "description": "Convention-specific configuration parameters",
          "properties": {
            "new_field": {
              "type": "string",
              "description": "REQUIRED. Describe the required field..."
            },
            "xyz": {
              "type": "object",
              "description": "XYZ Object containing x, y, z coordinates",
              "properties": {
                "x": {
                  "type": "number",
                  "description": "REQUIRED. X coordinate value"
                },
                "y": {
                  "type": "number",
                  "description": "REQUIRED. Y coordinate value"
                },
                "z": {
                  "type": "number",
                  "description": "REQUIRED. Z coordinate value"
                }
              },
              "required": ["x", "y", "z"],
              "additionalProperties": false
            },
            "another_one": {
              "type": "array",
              "description": "Array of numeric values",
              "items": {
                "type": "number"
              }
            }
          },
          "required": ["new_field"],
          "additionalProperties": false
        }
      },
      "required": ["version", "schema", "name", "description", "spec", "configuration"],
      "additionalProperties": false
    }
  },
  "required": ["f010a634-3525-416e-9320-8f44b5bc352c"],
  "additionalProperties": true
}
